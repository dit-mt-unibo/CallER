<div id="view-list" v-cloak>


    <div class="container-fluid row" style="margin:30px 0">
        <div class="col-3"></div>
        <div class="col-7">
            <input type="text" class="form-control" placeholder="filtra risultati per caccia al tesoro" v-model="filter_hunt">
        </div>

    </div>

<%  if ( items.length == 0 ) { %>

    <%- partial('../../partials/no-result.ejs' , {message: "Non sono stati ancora registrati dei giocatori."}) %>

<% } else { %>


    <table class="table table-striped">
      <thead>
          <tr>
              <th width="5%">id</th>
              <th width="15%">Email</th>
              <th width="15%">uuid</th>
              <th width="15%">Caccia</th>
              <th width="10%">Tappa</th>
              <th width="8%">Punteggio</th>
              <th width="22%">Risposte</th>
              <th style="text-align: center" width="10%">Ultima visita</th>
          </tr>
      </thead>
      <tbody>
          <tr v-for="item in filteredItems">
              <td>{{ item.id }}</td>
              <td>{{ item.email }}</td>
              <td>{{ item.uuid }}</td>
              <td class="text-highlight" @click="filter_hunt = item.hunt_id">{{item.hunt}}</td>
              <td>{{ item.stage }}</td>
              <td>{{ item.points }}</td>
              <td v-html="item.answers"></td>
              <td align="center">{{ new Date(item.updatedAt).toLocaleString() }}</td>
          </tr>
      </tbody>
  </table>

<% } %>

    </div>

</div>

<script src="/jscripts/pages/player/view-list.page.js"></script>

