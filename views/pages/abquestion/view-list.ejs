    <modal-delete :item-id="deleteItemId" :action="'/admin/abquestion/delete/'">
        <div slot="body">
            <p>Stai per eliminare una coppia, vuoi proseguire?</p>
        </div>
    </modal-delete>

    <div class="container-fluid">

    <flash-message v-if="flashMessage" :message="flashMessage.message" :type="flashMessage.type"></flash-message>

    <div class="container-fluid row" style="margin:30px 0">

        <div class="col-3">
            <a class="btn btn-success" href="/admin/abquestion/add">Nuova coppia</a>
        </div>
