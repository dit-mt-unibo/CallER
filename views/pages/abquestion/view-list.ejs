    </div>

<%  if ( items.length == 0 ) { %>

    <%- partial('../../partials/no-result.ejs' , {message: "Non sono state ancora inserite delle domande. Utilizza il bottone Nuovo contenuto per iniziare."}) %>

<% } else { %>

    <table class="table table-striped">
        <thead>
            <tr>
                <th width="5%">#</th>
                <th width="10%">Gioco</th>
                <th width="20%">Nome 1</th>
                <th width="20%">Nome 2</th>
                <th style="text-align: center" width="10%">Creato</th>
                <th style="text-align: center" width="10%">Modificato</th>
                <th width="15%"></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in items">
                <td>{{ item.id }}</td>
                <td>{{ item.abgame_name }}</td>
                <td>{{ item.name1 }}</td>
                <td>{{ item.name2 }}</td>
                <td align="center">{{ new Date(item.createdAt).toLocaleString() }}</td>
                <td align="center">{{ new Date(item.updatedAt).toLocaleString() }}</td>
                <td align="center">
                    <a class="btn btn-primary" :href="'/admin/abquestion/details/' + item.id">Visualizza</a>
                    <button type="button" class="btn btn-danger confirm-delete" @click="setDeleteItemId(item.id)"
                        data-toggle="modal" data-target="#confirmDeleteModal">
                        Elimina
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

<% } %>

    </div>

</div>

