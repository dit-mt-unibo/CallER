<div id="view-details" class="row justify-content-center" v-cloak>

    <flash-message v-if="flashMessage" :message="flashMessage.message" :type="flashMessage.type"></flash-message>

       
    <div class="col-10">

      <div class="mt-3">
        <h4>Coppia #<%- item.id %></h4>  
      </div>

      <div align="right" class="mtb-4">
        <a class="btn btn-primary" :href="'/admin/abquestion/edit/' + item.id">Modifica</a>
      </div>

      <div class="mt-3">
          <h5>Primo oggetto:&nbsp;</h5><%- item.name1 %>                  
      </div>

      <div class="mt-3">
        <h5>Descrizione:&nbsp;</h5><%- item.description1 %>                  
      </div>

      <div id="img1" class="cardimage">
        <img src="<%- item.imageUrl1 %>" alt="" />
      </div>

      <div class="mt-3">
        <h5>Secondo oggetto:</h5><%- item.name2 %>                  
      </div>

      <div class="mt-3">
        <h5>Descrizione: </h5><%- item.description2 %>                
      </div>

      <div id="img2" class="cardimage">
        <img src="<%- item.imageUrl2%>" alt="" />
              
      </div>
              
      <div class="mt-3">
        <h5>Punti: <small><%= item.points %></small></h5>
      </div>

      <div class="mt-3">
          <h5>ID Gioco: <small><%= item.abgame %></small></h5>
      </div>
      <div class="mt-3">
          <h5>Creato il: <small><%= new Date(item.createdAt).toLocaleString("it-IT") %></small></h5>
      </div>
      <div class="mt-3">
          <h5>Ultima modifica: <small><%= new Date(item.updatedAt).toLocaleString("it-IT") %></small></h5>
      </div>
              
    </div>

</div>

<script src="/jscripts/cloud.setup.js"></script>
<script src="/jscripts/components/image-form.component.js"></script>
<script src="/jscripts/components/flash-message.component.js"></script>
<script src="/jscripts/pages/abquestion/view-details.page.js"></script>
