
  
<div class="container">
<h2>Scheda numero <%= place.id %></h2>
<hr/>
 <!--
id, name, intro_text, full_text, image, video, audio, photo_gallery, blocked, tags, gps,
 *              published, category_id, createdAt, updatedAt
-->
  
  <form enctype="multipart/form-data" action="<%= '/place/update/'+  place.id %>" method="post" >
    <div class="form-group">
      <label>Nome</label>
      <input type="text" class="form-control" name="name" value="<%= place.name %>">
      </div>
    <div class="form-group">
      <label>Descrizione</label>
      <input type="text" class="form-control" name="intro_text" value="<%= place.intro_text %>">
    </div>
    <div class="form-group">
      <label>Posizione (coordinate)</label>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputLat">Latitudine</label>
        <input type="text" class="form-control" name="lat" value="<%= place.lat %>">
      </div>
      <div class="form-group col-md-6">
        <label for="inputLat">Longitudine</label>
        <input type="text" class="form-control" name="long" value="<%= place.long %>">
      </div>
    </div>
    <div class="form-group">
      <label>Testo</label>
    </div>
    <div class="form-group">
      <textarea class="form-control" name="full_text" rows="8"><%= place.full_text %></textarea>
    </div>

    <div class="form-group">
      <label>Categoria</label>
      <select name="category_id" class="form-control">
        <% categories.forEach(element => {
          var selected = (element.id == place.category_id) ? "selected" : "";
        %>
        <option value="<%= element.id %>" <%=selected %> > <%= element.name %>
        </option>
        <% }) %>
      </select>
    </div>

    <div class="container">
      <img class=""rounded mx-auto d-block" src="<%='/images/contenuti/'+place.imageUID %>"></img>
    </div>
    <div class="form-group">
      <label>Immagine</label>
      <input type="file" class="form-control" id="imageUpload" name="image" value="<%= place.image %>">
    </div>

    <button type="button" class="btn btn-primary" onclick="window.history.back();">Indietro</button>
    <button class="btn btn-warning" type="submit">Aggiorna</button>
  </form>

</div>
