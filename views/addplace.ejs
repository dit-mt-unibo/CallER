<div class="container">
<h2>Crea contenuto </h2>
<hr/>
 <!--
id, name, intro_text, full_text, image, video, audio, photo_gallery, blocked, tags, gps,
 *              published, category_id, createdAt, updatedAt
-->
  <div class="container">
    
  </div>
  <form action="<%= '/place/create/' %>" method="post" >
    <div class="form-group">
      <label>Nome</label>
      <input type="text" class="form-control" name="name" value="">
    </div>
    <div class="form-group">
      <label>Descrizione</label>
      <input type="text" class="form-control" name="intro_text" value="">
    </div>
    <div class="form-group">
      <label>Immagine</label>
      <input type="text" class="form-control" name="image" value="">
    </div>
    <div class="form-group">
      <label>Posizione</label>
      <input type="text" class="form-control" name="gps" value="">
    </div>
    <div class="form-group">
      <label>Testo</label>
    </div>
    <div class="form-group">
      <textarea class="form-control" name="full_text" rows="8"></textarea>
    </div>
    <div class="form-group">
      <label>Categoria</label>     
      <select name="category_id" class="form-control">
        <option value=""></option>
        <% categories.forEach(element => { %>
            <option value="<%= element.id %>"><%= element.name %></option>
        <% }) %>                
      </select>
    </div>


    <button type="button" class="btn btn-primary" onclick="window.history.back();">Indietro</button>
    <button class="btn btn-success" type="submit">Ok</button>
  </form>

</div>
